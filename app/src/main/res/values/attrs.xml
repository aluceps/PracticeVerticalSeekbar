<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerticalSeekBar">
        <attr name="direction_to" format="enum|reference">
            <enum name="top" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="left" value="3" />
        </attr>
        <attr name="max" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="ValueBar">
        <attr name="bar_height" format="dimension|reference" />
        <attr name="bar_color" format="color|reference" />
        <attr name="bar_value" format="integer|reference" />
        <attr name="bar_value_size" format="dimension|reference" />
        <attr name="bar_value_color" format="color|reference" />
        <attr name="bar_label_min_value" format="integer|reference" />
        <attr name="bar_label_max_value" format="integer|reference" />
        <attr name="bar_label_value_size" format="dimension|reference" />
        <attr name="bar_label_value_color" format="color|reference" />
        <attr name="bar_thumb" format="integer|reference" />
        <attr name="bar_balloon_color" format="color|reference" />
    </declare-styleable>
</resources>